<div class="container">
  <div class="users">
    <h2 class="users__title">ユーザーで絞り込む</h2>
    <div class="users__cards">
      <% @users.each do |user| %>
        <a href="<%= "/users/#{user.id}/articles" %>" class="users__card">
          <div class="userImg">
            <% if user.image? %>
              <%= image_tag user.image.url, :class => 'articles__cardImg' %>
            <% else %>
              <%= image_tag "/assets/default.png", :class => 'articles__cardImg' %>
            <% end %>
          </div>
          <div class="users__cardName"><%= user.name %></div>
        </a>
      <% end %>
    </div>
  </div>
</div>
