<div class="wrapper">
  <div class="container">
    <div class="articles-show-item">
      <% if flash[:notice] %>
        <div><%= flash[:notice] %></div>
      <% end %>

      <% if @article.image? %>
        <%= image_tag @article.image.url %>
      <% else %>
        <%= image_tag "/assets/default.jpg", :size => '100x100' %>
      <% end %>

      <% @article.tags.each do |tag| %>
        <span class="badge badge-primary"><%= tag.name %></span>
      <% end %>

      <p class="title">
        <%= @article.title %>
      </p>
      <p class="body">
        <%= @article.body %>
      </p>
      <% if @current_user %>
        <div class="buttonWrapper">
          <div><%= link_to "編集", edit_article_path %></div>
          <div><%= link_to "削除", @article, method: :delete %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div>
  <div>コメント</div>
  <%= render @article.comments %>
</div>

<%= render partial: 'comments/form', locals: { comment: @comment} %>

